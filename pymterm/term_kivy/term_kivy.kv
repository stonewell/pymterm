<TermTabbedPanel>:
    size_hint_y: 1
    size_hint_x: 1
    
<RootWidget>:
    term_panel: term_panel
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'Action Bar'
                    with_previous: False
                ActionOverflow:
                ActionButton:
                    text: 'Btn0'
        TermTabbedPanel:
            size_hint: 1, 1
            do_default_tab: False
            id: term_panel
        