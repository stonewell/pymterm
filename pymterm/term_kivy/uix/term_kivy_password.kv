<PasswordScreen>:
    BoxLayout
        id: password_layout
        orientation: 'vertical'
        padding: [10,10,10,10]

        TextInput:
            id: password
            multiline:False
            size_hint: (1, None)
            size: (160, 30)
            password:True
            font_size: 18

        BoxLayout
            orientation: 'horizontal'
    
            Button:
                text: 'Connect'
                font_size: 16
                size_hint: (None, None)
                size: (160, 30)
                pos_hint: {'center_x': 0.25, 'center_y': 0.5}
                on_press: root.do_action(password.text)
    
            Button:
                text: 'Cancel'
                font_size: 16
                size_hint: (None, None)
                size: (160, 30)
                pos_hint: {'center_x': 0.75, 'center_y': 0.5}
                on_press: root.do_cancel()
    
